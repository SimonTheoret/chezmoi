	email = stheoret@druide.com
    {{else}}
    email = simonteoret@hotmail.com
    {{end}}
	name = Simon Théorêt
[pull]
	rebase = true
[core]
    editor = $EDITOR
    pager = delta
    excludesfile = ~/.gitignore
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = false
	features = diff-so-fancy
# [merge]
# 	tool = codediff
[difftool]
    prompt = true
